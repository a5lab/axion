<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <include file="../properties.yml" relativeToChangelogFile="true"/>

    <changeSet id="create_segments_seq" author="a5lab">
        <createSequence sequenceName="segment_seq" startValue="${sequence.start-value}"
                        cacheSize="${sequence.cache-size}" incrementBy="${sequence.increment-by}"
                        maxValue="${sequence.max-size}"/>
    </changeSet>

    <changeSet id="create_radar_segments_table" author="a5lab">
        <createTable tableName="radar_segments" remarks="Holds information about radar segments">
            <column name="id" type="${bigint.type}" remarks="Radar Segment ID. Primary key">
                <constraints primaryKey="true" primaryKeyName="pk_radar_segments_id"/>
            </column>
            <column name="name" type="${text.type}" remarks="Radar segment name">
                <constraints unique="true" uniqueConstraintName="uc_radar_segments_name" nullable="false"
                             checkConstraint="trim(name)=name"/>
            </column>
            <column name="description" type="${text.type}" remarks="Description for radar ring"/>

            <column name="created_by"
                    type="${user.type}"
                    remarks="user who created the record">
                <constraints nullable="false"/>
            </column>
            <column name="created_date"
                    type="${datetime.type}"
                    defaultValue="now()"
                    remarks="when record was created"/>
            <column name="last_modified_by" type="${user.type}"
                    remarks="user who modified the record"/>
            <column name="last_modified_date" type="${datetime.type}" remarks="when record was modified"/>
        </createTable>
    </changeSet>

    <changeSet id="load_defaults_radar_segments" author="a5lab">
        <loadData tableName="radar_segments"
                  separator=","
                  file="db/changelog/data/dictionaries/fill_radar_segments.csv">
            <column name="id" type="bigint"/>
            <column name="name" type="STRING"/>
            <column name="description" type="STRING"/>
            <column name="created_by" type="STRING"/>
        </loadData>
    </changeSet>


</databaseChangeLog>
